<section class="main__middle__container">
  <div class="container">
    <div class="row nothing">
      <section class="col-md-12 main-content">
        <h3><%= image_tag(@game.owner.image, class: "  img-circle", size: 60)%>&nbsp;&nbsp; <span class="label label-primary"><%=@game.owner.first_name %>'s game is now over</span>&nbsp;
        </h3>
        <div class ="row">
          <div class="col-md-6 col-sm-3 text-right">
            <section id="wait-list">
              <div class="box box-danger">
                <div class="box-header with-border">
                  <h3 class="box-title">Player Standing:</h3>
                </div>
                <div class="box-body no-padding">
                  <h5>Winner is 
                  <%= image_tag(@game.winner.user.image, class: "  img-circle", size: 60)%>

                  <%= @game.winner.user.name %> with <%= @game.winner.score %> points.</h5>
                  <ul class="users-list clearfix" id = "game-list" style="list-style-type: none;">
                      <% @game.losers&.each do |player| %>
                    <li id="user-<%= player.user.id %>"><%= image_tag player.user.image, class: "img-circle" , size: 50 %>
                    <span class="users-list-name"><%= player.user.name %>: <%= player.score %>
                    </span></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </section>
         